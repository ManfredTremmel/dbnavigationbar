<project name="DBNavigationBarWidget" default="dist" basedir=".">
    <description>
        KnightSoft Database Navigation Bar
    </description>
  <!-- set global properties for this build -->
  <property name="dirs.base" value="${basedir}"/>
  <property name="src" location="src"/>
  <property name="build" location="war/WEB-INF/classes"/>
  <property name="dist"  location="dist"/>

  <target name="init">
    <!-- Create the time stamp -->
    <tstamp/>
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}"/>
    <mkdir dir="${dist}"/>
    <mkdir dir="${dist}/lib"/>
  </target>

  <target name="dist" depends="init"
        description="generate the distribution" >
    <!-- Create the distribution directory -->
    <mkdir dir="${dist}/lib"/>

    <!-- Put everything in ${build} and ${src} into the jar file -->
    <jar jarfile="${dist}/lib/DBNavigationBarWidget.jar">
        <fileset dir="${src}"  includes="**/*"/>
        <fileset dir="${build}"  includes="**/*.class"/>
    	<fileset dir="war" includes="DBNavigationBar.css"/>
    	<fileset dir="war" includes="DBNavigationBar.html"/>
		<manifest>
          <attribute name="Built-By" value="Manfred Tremmel"/>
		</manifest>
  	</jar>

	<!-- <jar jarfile="${dirs.base}/dist/lib/DBNavigationBarWidget-src-${DSTAMP}.jar" basedir="${src}">
		<fileset dir="${dirs.base}"  includes="build.xml"/>
	</jar> -->
  </target>

  <target name="clean"
        description="clean up" >
    <!-- Delete the ${build} and ${dist} directory trees -->
    <delete dir="${build}"/>
    <delete dir="${dist}/**/*"/>
  </target>
</project>
